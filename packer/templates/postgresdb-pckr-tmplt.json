{
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "../gcp-account.json",
      "project_id": "andela-learning",
      "source_image": "ubuntu-1604-xenial-v20180109",
      "zone": "europe-west2-b",
      "ssh_username": "packer",
      "image_name": "lmap-postgresdb-base-image"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../scripts/pg/postgres-startup.sh",
      "destination": "/tmp/postgres-startup.sh"
    },
    {
      "type": "file",
      "source": "../scripts/pg/postgresql.sh",
      "destination": "/tmp/postgresql.sh"
    },
    {
      "type": "file",
      "source": "../scripts/pg/pg_hba.conf",
      "destination": "/tmp/pg_hba.conf"
    },
    {
      "type": "file",
      "source": "../scripts/pg/postgresql.conf",
      "destination": "/tmp/postgresql.conf"
    },
    {
      "type": "shell",
      "script": "../scripts/pg/postgresdb-provisioner.sh"
    }
  ]
}

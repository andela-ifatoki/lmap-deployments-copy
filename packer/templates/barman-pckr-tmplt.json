{
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "../gcp-account.json",
      "project_id": "andela-learning",
      "source_image": "ubuntu-1604-xenial-v20180109",
      "zone": "europe-west2-b",
      "ssh_username": "packer",
      "image_name": "lmap-barman-base-image"
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "../scripts/barman/db-backup-cronjob",
      "destination": "/tmp/db-backup-cronjob"
    },
    {
      "type": "file",
      "source": "../scripts/barman/barman.sh",
      "destination": "/tmp/barman.sh"
    },
    {
      "type": "file",
      "source": "../scripts/barman/barman.conf",
      "destination": "/tmp/barman.conf"
    },
    {
      "type": "file",
      "source": "../scripts/barman/barman-startup.sh",
      "destination": "/tmp/barman-startup.sh"
    },
    {
      "type": "shell",
      "script": "../scripts/barman/barman-provisioner.sh"
    }
  ]
}
